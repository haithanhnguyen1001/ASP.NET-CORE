@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/Shipping" id="formShipping" method="post">
            <input type="hidden" name="id" value="@ViewBag.OrderID" />
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chuyển giao hàng cho đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Người giao hàng:</label>
                    <select class="form-control" name="shipperID">
                        <option value="0">-- Chọn người giao hàng ---</option>
                        @foreach (var shipper in SV21T1020712.BusinessLayers.CommonDataService.ListOfShippers())
                        {
                            <option value="@shipper.ShipperID">@shipper.ShipperName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <span id="error-message" style="color:#f00"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#formShipping').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: $(this).prop("action"),
                type: $(this).prop("method"),
                data: $(this).serializeArray(),
                success: function (result) {
                    if (isNaN(result)) {
                        $("#error-message").html(result);
                    } else {
                        location.reload();
                    }
                }
            });
            return;
        });
    });
</script>
